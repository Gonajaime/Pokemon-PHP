{% extends "pokemons/BasePokemon.html.twig" %}
{% block contenido %}

<h2>Listado de Pokemons </h2>
{% for message in app.flashes("exito") %}
<p>{{message}}</p>
{% endfor %}
<div class="row row-cols-1 row-cols-md-2"> {# PARA CADA POKEMON #}
      {% for pokemon in pokemons  %}
      <div class="col mb-4" >
            <div class="card" style="width: 18rem;"> <img src="{{pokemon.img}}" class="card-img-top">
                  <div class="card-body">
                        <h5 class="card-title">{{pokemon.name}}</h5>
                        <p class="card-text">{{pokemon.description}}</p> 
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{path("infoPokemon", {"id":pokemon.id})}}" class="btn btn-primary">MÃ¡s Info</a>
                        {% endif %}
                        <a href="{{path("editPokemon", {"id":pokemon.id})}}" class="btn btn-primary">Editar</a>
                        <a href="{{path("deletePokemon", {"id":pokemon.id})}}" class="btn btn-primary">Borrar</a>
                  </div>
            </div>
      </div> {# FIN PARA FIN PARA #}
      {% endfor %}
</div>


{% endblock %}